<div {{ attributes }} class="filter-wrapper {{ visible ? 'visible' }}">
	<a class="filter-backdrop" data-action="live#action" data-action-name="prevent|save"></a>
	<aside class="filter-form">
		<h2>Filtres</h2>
		<hr>
		{{ form_start(form, {
            attr: {
                'data-action': 'live#action',
                'data-action-name': 'prevent|save'
            }
        }) }}
		<fieldset role="group">
			<legend>Prix en â‚¬</legend>
			{{ form_row(form.minPrice, {
				attr: {
					'data-action': 'live#action',
					'data-action-name': 'prevent|debounce(300)|update'
				}
			}) }}
			{{ form_row(form.maxPrice, {
				attr: {
					'data-action': 'live#action',
					'data-action-name': 'prevent|debounce(300)|update'
				}
			}) }}
		</fieldset>
		<fieldset>
			<legend>Annonces urgentes</legend>
			{{ form_widget(form.isUrgent, {
				attr: {
					role: 'switch',
					'data-action': 'live#action',
					'data-action-name': 'prevent|update'
				}
			}) }}
			{{ form_label(form.isUrgent) }}
		</fieldset>

		<button class="outline" data-action="live#action" data-action-name="prevent|reset">Tout Effacer</button>
		<button>Recherche ({{ results }})</button>
		{{ form_end(form) }}
	</aside>
</div>
